{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "noImplicitAny": false,
        "moduleResolution": "node",
        "outDir": "./dist",
        "rootDir": "./src",
        "pretty": true,
        // "baseUrl": ".",
        "alwaysStrict": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "forceConsistentCasingInFileNames": true
        // "paths": {
        //   "*": ["node_modules/*", "src/types/*"]
        // },
    },
    "include": [
        "src/**/*.ts",
        "src/models/seed.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}